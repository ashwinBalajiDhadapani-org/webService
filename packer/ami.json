{
    "variables": {
        "aws_access_key":"AKIAWFS6DJLO2J3WEYXX",
        "aws_secret_key":"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"
    },
    "builders":[
        {
            "type":"amazon-ebs",
            "access_key":"{{user `aws_access_key`}}",
            "secret_key":"{{user `aws_secret_key`}}",
            "region":"us-east-2",
            "source_ami":"ami-0661cd3308ec33aaa",
            "instance_type":"t2.micro",
            "profile":"dev",
            "ssh_username":"ec2-user",
            "ami_name": "packer_webService {{timestamp}}"
        }
    ],
    "provisioners":[
        {
            "type":"shell",
            "inline":[
                "echo '######YUM update#####'",
                "sudo yum update -y",
                "echo '######installing git#####'",
                "sudo yum install git -y",
                "echo '######installing epel#####'",
                "sudo amazon-linux-extras install epel",
                "echo '######node step -1#####'",
                "curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.34.0/install.sh | bash",
                "echo '######node step -2#####'",
                ". ~/.nvm/nvm.sh",
                "echo '######node step -3#####'",
                "curl -sL https://rpm.nodesource.com/setup_14.x | sudo -E bash - ",
                "echo '######node step -4#####'",
                "sudo yum install -y nodejs",
                "echo '#####pm2 installation#####'",
                "sudo npm install -g pm2"
            ]
        },
        {
            "type":"shell",
            "inline":[
                "sudo yum -y install https://dev.mysql.com/get/mysql80-community-release-el7-5.noarch.rpm",
                "sudo yum -y install mysql-community-server",
                "sudo systemctl enable --now mysqld",
                "systemctl status mysqld",
                "mkdir /home/ec2-user/node_app",
                "chown ec2-user:ec2-user /home/ec2-user/node_app",
                "passwords=$(sudo grep 'temporary password' /var/log/mysqld.log | awk {'print $13'})",
                "mysql --connect-expired-password -u root -p$passwords -e \"ALTER USER 'root'@'localhost' IDENTIFIED BY 'Hello@1234';\"",
                "mysql -u root -pHello@1234 -e \"create database webapp;\"",
                "mysql -u root -pHello@1234 -e  \"ALTER USER 'root'@'localhost' IDENTIFIED WITH mysql_native_password BY 'Hello@1234';\"",
                "mysql -u root -pHello@1234 -e \"flush privileges;\""
            ]
        },
        {
            "type" : "file",
            "source" : "../",
            "destination": "/home/ec2-user/node_app"
        },
        {
            "type": "shell",
            "inline": [
                "echo '######cd -ing into the webService app directory#####'",
                "cd /home/ec2-user/node_app/",
                "echo '######Running npm install command#####'",
                "sudo npm install",
                "echo '######starting app using pm2#####'",
                "sudo pm2 start index.js",
                "echo '######starting up systemd using pm2#####'",
                "sudo pm2 startup systemd",
                "echo '######saving state#####'",
                "sudo pm2 save",
                "echo '######Linking files#####'",
                "sudo ln -s /home/ec2-user/node_app/node-service.service /etc/systemd/system/node-service.service",
                "echo '######running daemon-reload as systemctl#####'",
                "sudo systemctl daemon-reload",
                "echo '######Enabling node-service#####'",
                "sudo systemctl enable node-service.service",
                "sudo systemctl start node-service.service"
            ]
        }
    ]
}
